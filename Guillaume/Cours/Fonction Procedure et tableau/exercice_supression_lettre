ALGO:supression_de_lettre_avec_fonction
//BUT:Purger une lettre de la chaine de charactère
//ENTREE:L'utilisateur entre une chaine de charactère
//SORTIS:Chaine de charactère purger de la lettre demander 

FOCNTION purge(chaine_source:chaine;car_a_sup:caractere):chaine
VAR
	temp_chaine:chaine
	car_temp:caractere
	ent,i:entier
DEBUT
	ent<-LONGUEUR(chaine_source)
	POUR i de 1 a ent FAIRE
	DEBUR
		SI(car_temps<-EXTRACTION(chaine_source,i)<>car_a_sup) ALORS
			temp_chaine<-temp_chain+car_temp
		FINSI
	FINPOUR
	purge<-temp_chaine
FINFONCTION


//prog princ
VAR
	chaine_source:chaine
	car_a_sup:caractere


DEBUT
	ECRIRE("Veuillez entrer un mot/une phrase")
	LIRE(chaine_source)
	ECRIRE("Veuillez saisir le caractere a supprimer")
	LIRE(car_a_sup)
	ECRIRE (purge(chaine_source,car_a_sup))
	
	
FIN.


